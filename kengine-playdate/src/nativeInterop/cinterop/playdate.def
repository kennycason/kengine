headers = playdate_bridge.h
package = playdate.api
headerFilter = pd_api.h pd_api/*
compilerOpts = -I${PLAYDATE_SDK_PATH}/C_API \
    -I./src/nativeInterop/cinterop \
    -DTARGET_PLAYDATE=1 \
    -DTARGET_EXTENSION=1 \
    -target arm-none-eabi \
    -mcpu=cortex-m7 \
    -mthumb \
    -mfpu=fpv5-sp-d16 \
    -mfloat-abi=hard \
    -nostartfiles \
    -nostdlib++ \
    -fno-exceptions \
    -fno-rtti \
    -specs=nosys.specs